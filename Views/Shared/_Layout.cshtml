@using Microsoft.AspNetCore.Http
@{
    var userEmail = Context.Session.GetString("userEmail");
    var adminFlag = Context.Session.GetString("admin");
    var isAdmin = !string.IsNullOrEmpty(adminFlag);

    var controller = (string)(ViewContext.RouteData.Values["controller"] ?? "");
    var inAdminSection = controller == "Shipments" || controller == "Drivers" || controller == "Admin";
}
@{
    var title = ViewData["Title"] as string ?? "ShipmentTrackingSystem";

}
<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/site.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">ShipmentTrackingSystem</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="navMain" class="collapse navbar-collapse">
                <div class="navbar-nav">
                    @if (!inAdminSection)
                    {
                        <a class="nav-link" asp-controller="Users" asp-action="@(string.IsNullOrEmpty(userEmail) ? "Login" : "MyShipments")">User</a>
                    }
                    <a class="nav-link" asp-controller="Admin" asp-action="Login">Admin</a>
                </div>

                <div class="navbar-nav ms-auto">
                    @if (!string.IsNullOrEmpty(userEmail))
                    {
                        <span class="navbar-text me-2 small">@userEmail</span>
                        <a class="nav-link" asp-controller="Users" asp-action="Logout">Logout</a>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="Users" asp-action="Login">Login</a>
                        <a class="btn btn-light btn-sm ms-2" asp-controller="Users" asp-action="Register">Sign up</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="container" style="padding-top: 80px; padding-bottom: 40px;">
        @RenderBody()
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
