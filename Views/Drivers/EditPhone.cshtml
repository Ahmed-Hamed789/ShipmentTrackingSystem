@model ShipmentTrackingSystem.Models.Driver
@{
    ViewData["Title"] = "Edit Phone";
}

<h2>Edit Phone</h2>

<form asp-action="EditPhone" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input name="phone" class="form-control" value="@Model.Phone" />
        @Html.ValidationMessage("phone", new { @class = "text-danger" })
    </div>

    <a asp-action="Index" class="btn btn-secondary">Back</a>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
