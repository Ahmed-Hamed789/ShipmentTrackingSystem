@using Microsoft.AspNetCore.Http
@{
    var userEmail = Context.Session.GetString("userEmail");
    var adminFlag = Context.Session.GetString("admin");
    var isAdmin = !string.IsNullOrEmpty(adminFlag);

    var controller = (string)(ViewContext.RouteData.Values["controller"] ?? "");
    var inAdminSection = controller == "Shipments" || controller == "Drivers" || controller == "Admin";
}
@{
    var title = ViewData["Title"] as string ?? "ShipmentTrackingSystem";

}
<!doctype html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style> body { padding-top: 70px } #map { height: 480px } </style>
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">ShipmentTrackingSystem</a>

            <div class="navbar-nav">
                @* لا تُظهر رابط User داخل صفحات الأدمن *@
                @if (!inAdminSection)
                {
                    <a class="nav-link"
                       asp-controller="Users"
                       asp-action="@(string.IsNullOrEmpty(userEmail) ? "Login" : "MyShipments")">
                        User
                    </a>
                }
                <a class="nav-link" asp-controller="Admin" asp-action="Login">Admin</a>
            </div>

            <div class="navbar-nav ms-auto">
                @if (!string.IsNullOrEmpty(userEmail))
                {
                    <span class="navbar-text me-2">@userEmail</span>
                    <a class="nav-link" asp-controller="Users" asp-action="Logout">Logout</a>
                }
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
